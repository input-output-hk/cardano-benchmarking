# add bytes of data to every transaction
addsizetx=0

# number of inputs that each tx consumes
inputstx=1

# number of outputs that each tx creates
outputstx=1

# the transaction fee
txfee=1000000

# the transactions per seconds that the generator tries to achieve
tps=10


